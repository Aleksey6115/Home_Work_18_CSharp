<Window x:Class="HomeWork_18.Service.DialogAddPurchase.DialogAddPurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork_18.Service.DialogAddPurchase"
        mc:Ignorable="d"
        Title="DialogAddPurchaseWindow" WindowStartupLocation="CenterScreen"
        Width="350" Height="140">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите товар:" Margin="5"/>
        <ComboBox Grid.Row="1" Name="comboProduct" Margin="5"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right">
            <Button IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="Button_Click">OK</Button>
        </WrapPanel>

    </Grid>
</Window>
